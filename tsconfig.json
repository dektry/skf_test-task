{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "paths": {
      "components": ["src/components"],
      "styles": ["src/styles"]
    }
  },
  "include": [
    "src/**/*",
    "src/declaration/externals.d.ts",
  ],
  "exclude": ["node_modules"]
}
